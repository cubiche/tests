{
    "name": "cubiche/tests",
    "type": "library",
    "description": "Small component that provides tools to create and run tests for Cubiche components.",
    "keywords": ["test", "test generator", "coverage", "atoum"],
    "license": "MIT",
    "authors": [
        {
            "name": "Karel Osorio",
            "email": "osorioramirez@gmail.com"
        },
        {
            "name": "Ivannis Su√°rez",
            "email": "ivannis.suarez@gmail.com"
        }
    ],
    "require": {
        "php":                          "^5.5.9|^7.0",
        "atoum/atoum":                  "~2.5",
        "atoum/stubs":                  "~2.5",
        "atoum/visibility-extension":   "~1.0",
        "symfony/console":              "~2.4"
    },
    "require-dev": {
        "cubiche/cqt":                  "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Cubiche\\Tests\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": [
        "test-generator"
    ],
    "minimum-stability": "dev",
    "scripts": {
        "post-install-cmd": [
            "chmod +x test-generator"
        ],
        "post-update-cmd": [
            "chmod +x test-generator"
        ]
    }
}